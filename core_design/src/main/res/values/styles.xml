<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Toolbar.Navigation" parent="Widget.MaterialComponents.Toolbar.Surface">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="MeetingsButtonFilled" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="cornerRadius">@dimen/max_corner_radius</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MeetingsButtonFilled.Medium">
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="MeetingsButtonFilled.Medium.Active">
        <item name="backgroundTint">@color/blue</item>
    </style>

    <style name="MeetingsButtonFilled.Medium.Inactive">
        <item name="backgroundTint">@color/black_30</item>
    </style>

    <style name="MeetingsButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeWidth">2dp</item>
        <item name="android:textSize">@dimen/text_size_17</item>
        <item name="cornerRadius">@dimen/max_corner_radius</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
        <item name="rippleColor">@color/button_light_ripple</item>
    </style>

    <style name="MeetingsButtonOutlined.Medium">
        <item name="android:minHeight">@dimen/button_height</item>
    </style>

    <style name="MeetingsButtonOutlined.Medium.Active">
        <item name="strokeColor">@color/blue</item>
    </style>

    <style name="MeetingsButtonOutlined.Medium.Inactive">
        <item name="strokeColor">@color/black_30</item>
    </style>

    <style name="MeetingsButtonPrimaryActive">
        <item name="button_style">@style/MeetingsButtonFilled.Medium.Active</item>
    </style>

    <style name="MeetingsButtonPrimaryInactive">
        <item name="button_style">@style/MeetingsButtonFilled.Medium.Inactive</item>
    </style>


    <style name="MeetingsButtonSecondaryActive">
        <item name="button_style">@style/MeetingsButtonOutlined.Medium.Active</item>
    </style>

    <style name="MeetingsButtonSecondaryInactive">
        <item name="button_style">@style/MeetingsButtonOutlined.Medium.Inactive</item>
    </style>
</resources>